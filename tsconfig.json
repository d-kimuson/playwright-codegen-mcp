{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    // module resolution
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    // transpile,
    "noEmit": true,

    // typecheck
    "exactOptionalPropertyTypes": false
  },
  "include": ["src"]
}
